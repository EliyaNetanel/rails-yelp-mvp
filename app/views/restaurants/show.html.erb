<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<h3><em>Reviews:</em></h3>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.rating %>/5 <%= review.content %></p>
  <!-- <p><%=  %></p> -->
<% end %>

<%= render 'review_form' %>

<p><%= link_to "Edit", edit_restaurant_path %></p>
<p><%= link_to "Delete", @restaurant, method: :delete, data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Back to restaurants", restaurants_path %></p>
